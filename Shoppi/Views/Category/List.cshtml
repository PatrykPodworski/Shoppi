@model Shoppi.Models.CategoryListViewModel
@{
    ViewBag.Title = "Categories";
}

<h2>List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Head Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@(category.HeadCategory != null ? category.HeadCategory.Name : "None")</td>
            </tr>
        }
    </tbody>
</table>