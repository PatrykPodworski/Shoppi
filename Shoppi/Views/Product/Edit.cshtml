@using Shoppi.Helpers
    @model Shoppi.Models.ProductEditViewModel

    @{
        ViewBag.Title = "Edit";
    }

    <h2>Edit</h2>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenForCategories(Model.Categories)

        <div class="form-group">
            @Html.LabelFor(model => model.Name)
            @Html.EditorFor(model => model.Name)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Quantity)
            @Html.EditorFor(model => model.Quantity)
        </div>

        <div class="form-group">
            @Html.Label("Category")
            @Html.DropDownListFor(x => x.CategoryId, Model.Categories.Select(x => new SelectListItem { Value = x.Id.ToString(), Text = x.Name }).ToList())
        </div>

        <div class="form-group">
            @Html.ActionLink("Cancel", "Index")
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    }