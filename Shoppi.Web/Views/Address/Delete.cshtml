@model Shoppi.Web.Models.AddressViewModels.AddressDeleteViewModel
@{
    ViewBag.Title = "Delete address";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        @Html.Partial("PageHeader")
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(m => m.Id)
            <ul class="list-group">
                <li class="list-group-item list-group-item-info text-center">@Model.Name</li>
                <li class="list-group-item"><label>Address line:</label> @Model.AddressLine</li>
                <li class="list-group-item"><label>City:</label> @Model.City</li>
                <li class="list-group-item"><label>Zip code:</label> @Model.ZipCode</li>
                <li class="list-group-item"><label>Country:</label> @Model.Country</li>
            </ul>
            <div class="form-group">
                @Html.ActionLink("Cancel", "Index")
                <button type="submit" class="btn btn-danger pull-right">Delete</button>
            </div>
        }
    </div>
</div>