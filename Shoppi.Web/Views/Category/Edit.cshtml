@using Shoppi.Helpers
@model Shoppi.Models.CategoryEditViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Category</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenForSelectListItem(Model.HeadCategoryCandidates, "HeadCategoryCandidates")
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.EditorFor(m => m.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.HeadCategoryId)
        @Html.DropDownListFor(m => m.HeadCategoryId, Model.HeadCategoryCandidates, "None")
    </div>
    <div class="form-group">
        @Html.ActionLink("Cancel", "List")
        <button type="submit" class="btn btn-primary">Edit</button>
    </div>
}