@model Shoppi.Web.Models.CategoryViewModels.CategoryListViewModel
@{
    ViewBag.Title = "Categories";
}

@Html.Partial("PageHeader")
@Html.ActionLink("Add new category", "Create")
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Head Category</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
            {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@(category.HeadCategory != null ? category.HeadCategory.Name : "None")</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = category.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = category.Id })
                </td>
            </tr>
        }
    </tbody>
</table>