@using Shoppi.Web.Helpers
@model Shoppi.Web.Models.ProductViewModels.ProductEditViewModel

@{
    ViewBag.Title = "Edit a product";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        @Html.Partial("PageHeader")
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenForSelectListItem(Model.Categories, "Categories")
            @Html.HiddenForSelectListItem(Model.Brands, "Brands")

            <div class="form-group">
                @Html.LabelFor(model => model.Name)
                @Html.EditorFor(model => model.Name, "BootstrapString")
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.CategoryId)
                @Html.DropDownListFor(x => x.CategoryId, Model.Categories, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.BrandId)
                @Html.DropDownListFor(x => x.BrandId, Model.Brands, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Price)
                @Html.EditorFor(model => model.Price, "BootstrapDecimal")
            </div>
            <div class="form-group">
                @Html.ActionLink("Cancel", "Index")
                <input type="submit" value="Save" class="btn btn-primary pull-right" />
            </div>
        }
    </div>
</div>