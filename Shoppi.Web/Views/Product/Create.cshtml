@using Shoppi.Web.Helpers;
@model Shoppi.Web.Models.ProductViewModels.ProductCreateViewModel

@{
    ViewBag.Title = "Add a product";
}
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h1>@ViewBag.Title</h1>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            @Html.HiddenForSelectListItem(Model.Categories, "Categories")
            <input class="form-control" type="text" />
            <div class="form-group">
                @Html.LabelFor(x => x.Name)
                @Html.EditorFor(x => x.Name, "BootstrapString")
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.CategoryId)
                @Html.DropDownListFor(x => x.CategoryId, Model.Categories, "Choose a category", new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Quantity)
                @Html.EditorFor(x => x.Quantity, "BootstrapInt")
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Price)
                @Html.EditorFor(x => x.Price, "BootstrapDecimal")
            </div>
            <div class="form-group">
                @Html.ActionLink("Cancel", "Index")
                <input type="submit" value="Save" class="btn btn-primary pull-right" />
            </div>
        }
    </div>
</div>