@using Shoppi.Web.Helpers;
@model Shoppi.Web.Models.ProductViewModels.ProductCreateViewModel

@{
    ViewBag.Title = "Add a product";
}
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        @Html.Partial("PageHeader")
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            @Html.HiddenForSelectListItem(Model.Categories, "Categories")
            @Html.HiddenForSelectListItem(Model.Brands, "Brands")
            <div class="form-group">
                @Html.LabelFor(x => x.Name)
                @Html.EditorFor(x => x.Name, "BootstrapString")
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.CategoryId)
                @Html.DropDownListFor(x => x.CategoryId, Model.Categories, "Choose a category", new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.BrandId)
                @Html.DropDownListFor(x => x.BrandId, Model.Brands, "Choose a brand", new { @class = "form-control" })
                @Html.ActionLink("Add new brand", "Create", "Brand", new { returnUrl = Request.Url.ToString() }, null)
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Price)
                @Html.EditorFor(x => x.Price, "BootstrapDecimal")
            </div>
            <div class="form-group">
                @Html.ActionLink("Cancel", "Index")
                <input type="submit" value="Save" class="btn btn-primary pull-right" />
            </div>
        }
    </div>
</div>